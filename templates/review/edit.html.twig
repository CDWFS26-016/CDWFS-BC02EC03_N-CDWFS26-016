{% extends "base.html.twig" %}

{% block title %}Modifier un avis{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>{% if isResponsible %}Mod√©rer{% else %}Modifier{% endif %} l'avis</h1>

            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.content) }}
                    {{ form_widget(form.content) }}
                    {% if form.content.vars.errors|length %}
                        <div class="alert alert-danger mt-2">
                            {{ form_errors(form.content) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    {{ form_label(form.rating) }}
                    {{ form_widget(form.rating) }}
                    {% if form.rating.vars.errors|length %}
                        <div class="alert alert-danger mt-2">
                            {{ form_errors(form.rating) }}
                        </div>
                    {% endif %}
                </div>

                {% if isResponsible %}
                    <div class="mb-3 p-3 bg-warning bg-opacity-10 border border-warning rounded">
                        <h6 class="text-warning">üõ†Ô∏è Zone de mod√©ration</h6>
                        
                        {{ form_label(form.comments) }}
                        {{ form_widget(form.comments) }}
                        {% if form.comments.vars.errors|length %}
                            <div class="alert alert-danger mt-2">
                                {{ form_errors(form.comments) }}
                            </div>
                        {% endif %}

                        {% if form.validated is defined %}
                            <div class="form-check mt-3">
                                {{ form_widget(form.validated) }}
                                {{ form_label(form.validated) }}
                            </div>
                        {% endif %}
                    </div>
                {% endif %}

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">
                        ‚úì Enregistrer
                    </button>
                    {% if isResponsible %}
                        <form method="POST" action="{{ path('review_delete', {'id': review.id}) }}" style="display: inline;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cet avis ?');">
                            <button type="submit" class="btn btn-danger">
                                üóëÔ∏è Supprimer
                            </button>
                        </form>
                    {% endif %}
                    <a href="{{ path('event_show', {'id': event.id}) }}" class="btn btn-secondary">
                        Annuler
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
