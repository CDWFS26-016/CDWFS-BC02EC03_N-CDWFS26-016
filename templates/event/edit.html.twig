{% extends "base.html.twig" %}

{% block title %}Modifier un événement{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Modifier l'événement "{{ event.title }}"</h1>

            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title) }}
                    {% if form.title.vars.errors|length %}
                        <div class="alert alert-danger mt-2">
                            {{ form_errors(form.title) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    {{ form_label(form.date) }}
                    {{ form_widget(form.date) }}
                    {% if form.date.vars.errors|length %}
                        <div class="alert alert-danger mt-2">
                            {{ form_errors(form.date) }}
                        </div>
                    {% endif %}
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">
                        ✓ Enregistrer les modifications
                    </button>
                    <a href="{{ path('event_show', {'id': event.id}) }}" class="btn btn-secondary">
                        Annuler
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
