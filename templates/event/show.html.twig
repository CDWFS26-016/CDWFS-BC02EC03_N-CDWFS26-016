{% extends "base.html.twig" %}

{% block title %}{{ event.title }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1>{{ event.title }}</h1>
            
            <div class="card mb-4">
                <div class="card-body">
                    <p><strong>üìÖ Date :</strong> {{ event.date|date('d/m/Y H:i') }}</p>
                    <p><strong>üë§ Responsable :</strong> {{ event.responsable.email }}</p>
                </div>
            </div>

            {% set validatedReviewsCount = event.reviews|filter(r => r.isValidated)|length %}
            <h2 class="mt-4 mb-3">Avis ({{ validatedReviewsCount }})</h2>

            {% if is_granted('ROLE_USER') %}
                <div class="mb-4">
                    <a href="{{ path('review_create', {'eventId': event.id}) }}" class="btn btn-success">
                        + Ajouter un avis
                    </a>
                </div>
            {% endif %}

            {% if reviews|length == 0 %}
                <div class="alert alert-info">
                    Aucun avis pour le moment.
                </div>
            {% else %}
                <div class="row">
                    {% for review in reviews %}
                        <div class="col-md-12 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h5 class="card-title">
                                                ‚≠ê {{ review.rating }}/5
                                            </h5>
                                            <p class="card-text">{{ review.content }}</p>
                                            {% if review.comments %}
                                                <div class="alert alert-light border mt-2">
                                                    <small><strong>Mod√©ration :</strong></small>
                                                    <p>{{ review.comments }}</p>
                                                </div>
                                            {% endif %}
                                            <small class="text-muted">
                                                Par <strong>{{ review.author.email }}</strong>
                                            </small>
                                        </div>
                                        {% if is_granted('ROLE_ADMIN') or event.responsable == app.user %}
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('review_edit', {'id': review.id}) }}" class="btn btn-sm btn-warning">
                                                    ‚úèÔ∏è Mod√©rer
                                                </a>
                                            </div>
                                        {% elseif review.author == app.user %}
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('review_edit', {'id': review.id}) }}" class="btn btn-sm btn-primary">
                                                    ‚úèÔ∏è Modifier
                                                </a>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Actions</h5>
                </div>
                <div class="card-body">
                    {% if is_granted('ROLE_ADMIN') or event.responsable == app.user %}
                        <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-warning btn-sm w-100 mb-2">
                            ‚úèÔ∏è Modifier l'√©v√©nement
                        </a>
                        <a href="{{ path('event_delete', {'id': event.id}) }}" class="btn btn-danger btn-sm w-100" onclick="return confirm('√ätes-vous s√ªr ?')">
                            üóëÔ∏è Supprimer
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <a href="{{ path('event_list') }}" class="btn btn-secondary mt-4">
        ‚Üê Retour aux √©v√©nements
    </a>
</div>
{% endblock %}
